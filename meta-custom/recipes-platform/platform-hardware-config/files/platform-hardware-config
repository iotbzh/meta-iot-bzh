set -e

MYNAME=$(basename $BASH_SOURCE)

confdir_default=$(cd $(dirname $(realpath $BASH_SOURCE)) && pwd -P)

function info() { echo "$(basename $BASH_SOURCE) - $@" >&2; }
function warning() { echo "$(basename $BASH_SOURCE) - WARNING: $@" >&2; }
function error() { echo "$(basename $BASH_SOURCE) - ERROR: $@" >&2; }

function run_script() {
	local sc=$1; shift
	info "Running: $sc $@"
	bash $sc "$@"|| error "script $sc FAILED with $?"
	return 0
}


HWINFO=/etc/platform-info/hardware

[[ ! -f $HWINFO ]] && { error "Unable to find $HWINFO"; exit 1; }

. $HWINFO || { error "Unable to source $HWINFO"; exit 2; }
 
# --------------------------------------------------------------

# always include 'common' dir
LISTDIR="${confdir_default}/common"

# $HWINFO should contain some of the following keys: CPU_ARCH, SOC_VENDOR, ...
# let's find which ones
CATEGORIES="\
   CPU_ARCH \
   SOC_VENDOR \
   BOARD_MODEL \
"
for key in $CATEGORIES; do
	hwkey="HW_$key"

	# map key to folder name
	case $hwkey in
		CPU_ARCH)		dirname=arch;;
		SOC_VENDOR)		dirname=vendor;;
		BOARD_MODEL)	dirname=board;;
		*)				dirname=${key,,} # key in lowercase
	esac
	[[ -z "${!hwkey}" ]] && { warning "$hwkey is not set - please check $HWINFO"; continue; }
	LISTDIR="${LISTDIR} ${confdir_default}/$dirname/${!hwkey}"
done

# then iterate on each found dir and run scripts inside
for dir in $LISTDIR; do
	if [[ -d $dir ]]; then
		for sc in $(ls $dir);do
			run_script $dir/$sc
		done
	fi
done
